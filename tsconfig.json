{
  "compilerOptions": {
    "target": "ESNext",
    "module": "nodenext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
      "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}